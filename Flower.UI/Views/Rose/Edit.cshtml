@model RoseEditRequest
@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Roses</h1>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form class="user" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Name">Name</label>
                        <input asp-for="Name" class="form-control" id="Name" placeholder=" ">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Desc">Desc</label>
                        <input asp-for="Desc" class="form-control" id="Desc" placeholder=" ">
                        <span class="text-danger" asp-validation-for="Desc"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Value">Value</label>
                    <input asp-for="Value" class="form-control" id="Value" placeholder=" " />
                    <span class="text-danger" asp-validation-for="Value"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="CategoryIds">CategoryIds</label>
                        <select asp-for="CategoryIds" class="form-control" id="CategoryIds" multiple="multiple" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
                        <span class="text-danger" asp-validation-for="CategoryIds"></span>
                    </div>
                </div>
                <label for="imgInput">Image File</label>
                <input type="file" name="Files" class="form-control imgInput" placeholder=" " multiple />

                @if (ViewBag.Pictures != null)
                {
                    @foreach (PictureResponse item in ViewBag.Pictures)
                    {
                        @*<div class="form-group">

                            <input type="hidden" asp-for="PictureIds" value="@item.Id" />
                            <div class="preview-box mt-2" style="display:inline-block;">
                                <img width="200" class="previewImg" src="@item.Url" />
                            </div>

                            <span class="text-danger" asp-validation-for="@item.Url"></span>
                        </div>*@
                        <div class="img-box mt-3 mr-3" style="display:inline-block;position:relative">
                            <span class="remove-img-icon">x</span>
                            <input type="hidden" asp-for="PictureIds" value="@item.Id" />
                            <img width="200"  class="previewImg" src="@item.Url" />
                        </div>
                    }
                }

                <button class="btn btn-primary" type="submit">Edit Rose</button>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @Html.Partial("_ValidationScriptsPartial")

    <script>$(document).ready(function () {
            $(".imgInput").change(function (e) {
                let box = $(this).parent().find(".preview-box");
                $(box).find(".previewImg").remove();

                if (e.target.files.length > 0) {
                    let reader = new FileReader();
                    reader.readAsDataURL(e.target.files[0]);
                    reader.onload = () => {
                        let img = document.createElement("img");
                        img.style.width = "200px";
                        img.classList.add("previewImg");
                        img.setAttribute("src", reader.result);
                        $(box).append(img);
                    }
                } else {
                    $(box).find(".previewImg").remove();
                }
            });
        });</script>
}
