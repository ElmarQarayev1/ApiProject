@model RoseCreateRequest
@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Roses</h1>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form class="user" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="title1Input">Name</label>
                        <input asp-for="Name" class="form-control" id="title1Input" placeholder=" ">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="date">Desc</label>
                        <input asp-for="Desc" class="form-control" id="date" placeholder=" ">
                        <span class="text-danger" asp-validation-for="Desc"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="venue">Value</label>
                    <input asp-for="Value" class="form-control" id="venue" placeholder=" " />
                    <span class="text-danger" asp-validation-for="Value"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="CategoryId">CategoryIds</label>
                        <select asp-for="CategoryIds" class="form-control" id="CategoryId" multiple="multiple" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
                        <span class="text-danger" asp-validation-for="CategoryIds"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="imgInput">ImageFile</label>
                    <input asp-for="Files" class="form-control imgInput" placeholder=" " multiple>
                    <div class="preview-box mt-2">
                        <img width="200" class="previewImg" />
                    </div>
                    <span class="text-danger" asp-validation-for="Files"></span>
                </div>
                <button class="btn btn-primary" type="submit">Create Rose</button>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @Html.Partial("_ValidationScriptsPartial")

    <script>$(document).ready(function () {
            $(".imgInput").change(function (e) {
                let box = $(this).parent().find(".preview-box");
                $(box).find(".previewImg").remove();

                if (e.target.files.length > 0) {
                    let reader = new FileReader();
                    reader.readAsDataURL(e.target.files[0]);
                    reader.onload = () => {
                        let img = document.createElement("img");
                        img.style.width = "200px";
                        img.classList.add("previewImg");
                        img.setAttribute("src", reader.result);
                        $(box).append(img);
                    }
                } else {
                    $(box).find(".previewImg").remove();
                }
            })
        });</script>
}
