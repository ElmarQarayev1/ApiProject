@model SliderEditRequest
@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sliders</h1>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form class="user" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title1Input">Title</label>
                    <input asp-for="Title" class="form-control" id="title1Input" placeholder=" " />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label for="Desc">Desc</label>
                    <input asp-for="Desc" class="form-control" id="Desc" placeholder=" " />
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label for="Order">Order</label>
                    <input asp-for="Order" class="form-control" id="Order" placeholder=" " />
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="form-group">
                    <label for="imgInput">File</label>
                    <input asp-for="File" class="form-control imgInput" type="file" accept="image/*" />
                    <span class="text-danger" asp-validation-for="File"></span>

                    <div class="preview-box">
                        <img width="200" class="previewImg" src="@Model.FileUrl" />
                    </div>
                    <span class="text-danger" asp-validation-for="@Model.File"></span>
                </div>
                <button class="btn btn-primary" type="submit">
                    Edit Slider
                </button>
            </form>
        </div>
    </div>
</div>

@section scripts {

    @Html.Partial("_ValidationScriptsPartial")

    <script>$(document).ready(function () {
            $(".imgInput").change(function (e) {
                let box = $(this).parent().find(".preview-box");
                $(box).find(".previewImg").remove();

                if (e.target.files.length > 0) { 
                    let reader = new FileReader();
                    reader.readAsDataURL(e.target.files[0]); 
                    reader.onload = () => {
                        let img = document.createElement("img");
                        img.style.width = "200px";
                        img.classList.add("previewImg");
                        img.setAttribute("src", reader.result); 
                        $(box).append(img);
                    }
                } else {
                   
                    $(box).find(".previewImg").remove();
                }
            })
        });</script>
}