@model SliderCreateRequest
@{
    ViewData["Title"] = "Create";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sliders</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            Create
        </a>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form class="user" asp-action="create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="FullNameInput">Title</label>
                    <input asp-for="Title" class="form-control" id="FullNameInput" placeholder="">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label for="EmailInput">Description</label>
                    <textarea asp-for="Desc" class="form-control" id="EmailInput" placeholder=""></textarea>
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>

                <div class="form-group">
                    <label for="OrderInput">Order</label>
                    <input asp-for="Order" class="form-control" id="OrderInput">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>

                <div class="form-group">
                    <label for="FileInput">File</label>
                    <input type="file" asp-for="File" class="form-control" id="FileInput">
                    <span class="text-danger" asp-validation-for="File"></span>
                </div>

                <div class="preview-box mt-2"></div>

                <button class="btn btn-primary" type="submit">
                    Create Slider
                </button>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @Html.Partial("_ValidationScriptsPartial")

    <script>$(document).ready(function () {
            $("#FileInput").change(function (e) {
                let box = $(this).closest('form').find(".preview-box");
                $(box).empty(); 

                if (e.target.files.length > 0) {
                    let reader = new FileReader();
                    reader.readAsDataURL(e.target.files[0]);
                    reader.onload = () => {
                        let img = document.createElement("img");
                        img.style.width = "200px";
                        img.classList.add("previewImg");
                        img.setAttribute("src", reader.result);
                        $(box).append(img);
                    }
                } else {
                    $(box).empty(); 
                }
            });
        });</script>
}
